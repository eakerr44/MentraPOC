# Database Configuration
DATABASE_URL=postgresql://mentra_user:mentra_dev_password@localhost:5432/mentra_dev
POSTGRES_DB=mentra_dev
POSTGRES_USER=mentra_user
POSTGRES_PASSWORD=mentra_dev_password
DB_HOST=localhost
DB_PORT=5432

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=your_session_secret_change_in_production

# Enhanced Security Headers
CSP_REPORT_ONLY=true
HSTS_MAX_AGE=3600
SECURITY_HEADERS_ENABLED=true

# AI Configuration
AI_API_KEY=your_ai_api_key_here
AI_MODEL=llama2
AI_ENDPOINT=http://localhost:11434

# Vector Database (ChromaDB)
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME=mentra_context

# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/mentra.log

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password
FROM_EMAIL=noreply@mentra.com

# Privacy & Compliance
DATA_RETENTION_DAYS=365
COPPA_MODE=true
ANALYTICS_ENABLED=false 